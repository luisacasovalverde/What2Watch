        <RelativeLayout
            android:id="@+id/layout_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_textinput"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/busqueda_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/attr_img_back"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:src="@drawable/ic_arrow_back_white_24dp" />

            <EditText
                android:id="@+id/busqueda_input_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/busqueda_btn_back"
                android:layout_toLeftOf="@+id/busqueda_input_btn_voice"
                android:layout_toRightOf="@+id/busqueda_btn_back"
                android:layout_toStartOf="@+id/busqueda_input_btn_voice"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="left|center"
                android:hint="@string/search_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textColor="#c0ffffff"
                android:textColorHint="#80ffffff"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/busqueda_input_btn_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/attr_img_voice_query"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:src="@drawable/ic_mic_white_24dp" />


        </RelativeLayout>


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layout_input">

            <TextView
                android:id="@+id/txt_resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>

        <TextView
            android:id="@+id/txt_queryvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/scrollView"
            android:layout_centerHorizontal="true"
            android:background="#8affffff"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#424242"
            android:textSize="30sp" />


    </RelativeLayout>


</RelativeLayout>
